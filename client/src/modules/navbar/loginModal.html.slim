.modal-header
  h3.modal-title Log In

.modal-body
  form name="loginForm"

    .form-group
      input.form-control(
        type="text"
        name="username"
        ng-model="credentials.email"
        required=""
        ng-enter="login(loginForm)"
        placeholder="Username"
      )


    .form-group
      input.form-control(
        type="password"
        name="password"
        ng-model="credentials.password"
        required=""
        ng-enter="login(loginForm)"
        placeholder="Password"
      )

.modal-footer
  button.btn.btn-primary ng-click="login(loginForm)" Log In
  button.btn.btn-primary ng-click="cancel()" Cancel
